{
  "name": "tdesign-api",
  "version": "0.0.1",
  "description": "a tool for manage API",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-bodyparser": "^4.3.0",
    "koa-cors": "^0.0.16",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-router": "^9.4.0",
    "koa-send": "^5.0.1",
    "koa-static": "^5.0.0",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "node-fetch": "^2.6.1",
    "qs": "^6.9.4",
    "sql.js": "^1.6.2",
    "squel": "^5.13.0"
  },
  "devDependencies": {
    "@types/koa": "^2.11.6",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.1",
    "@types/koa-static": "^4.0.2",
    "@types/koa2-cors": "^2.0.1",
    "@types/lodash": "^4.14.165",
    "@types/node-fetch": "^2.5.7",
    "@types/pify": "^3.0.2",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.15.0",
    "nodemon": "^2.0.6",
    "pm2": "^4.5.0",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^3.9.6"
  },
  "scripts": {
    "lint": "eslint ./packages --max-warnings 0 --ext .ts,.tsx --fix",
    "dev": "cross-env NODE_ENV=dev nodemon",
    "watch": "rm -rf dist/* && tsc --w",
    "build": "rm -rf dist/* && tsc",
    "prod": "npm run build && npx pm2 start ecosystem.config.js --env production",
    "reload": "npm run build && pm2 reload api-server --parallel 32 --update-env",
    "api:download": "node packages/script/download.js",
    "api:docs": "npm run api:download && node packages/script/index.js",
    "api:vscode": "npm run api:download && node packages/script/vscode"
  },
  "author": "TDesign",
  "license": "ISC"
}
